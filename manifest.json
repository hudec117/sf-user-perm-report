{
    "name": "Salesforce User Permission Report",
    "description": "Report summarising granted permissions to user from profile and permission sets. Easy way to identify if a user has specific permissions!",
    "version": "0.1.0",
    "author": "Aurel Hudec",
    "manifest_version": 3,
    "permissions": [
        "cookies",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.my.salesforce.com/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' http://localhost:8098; object-src 'self'"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.my.salesforce.com/*"
            ],
            "all_frames": true,
            "js": [
                "content-script.js"
            ]
        }
    ]
}